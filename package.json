{
  "name": "mundo-fitness-lambda-tests",
  "version": "1.0.0",
  "description": "Tests unitarios para Lambda functions de El Mundo Fitness",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2"
  },
  "keywords": [
    "lambda",
    "aws",
    "testing",
    "fitness"
  ],
  "author": "El Mundo Fitness Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "aws-sdk-client-mock": "^3.0.1",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.478.0",
    "@aws-sdk/client-ses": "^3.478.0",
    "@aws-sdk/lib-dynamodb": "^3.478.0",
    "uuid": "^9.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "lambda-code-examples/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "reporters": [
      "default",
      ["jest-junit", {
        "outputDirectory": "coverage",
        "outputName": "junit.xml",
        "classNameTemplate": "{classname}",
        "titleTemplate": "{title}",
        "ancestorSeparator": " â€º ",
        "usePathForSuiteName": "true"
      }]
    ]
  }
}
